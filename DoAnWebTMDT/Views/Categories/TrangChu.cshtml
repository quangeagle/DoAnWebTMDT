    @model IEnumerable<DoAnWebTMDT.Data.Category>



@{
    ViewData["Title"] = "Danh mục sản phẩm";
}
@{
    Layout = "_LayoutUser";
}



<div class="category-container">
    @foreach (var category in Model)
    {
        <div class="category-item">
            @if (!string.IsNullOrEmpty(category.MediaPath))
            {
                if (category.MediaPath.EndsWith(".mp4"))
                {
                    <video autoplay loop muted class="category-media">
                        <source src="@category.MediaPath" type="video/mp4">
                    </video>
                }
                else
                {
                    <img src="@category.MediaPath" alt="@category.Name" class="category-media" />
                }
            }
            <div class="category-info">
                <h2>@category.Name</h2>
            </div>
        </div>
    }
</div>

<style>


    html, body {
        width: 100vw;
        height: 100vh;
        margin: 0;
        padding: 0;
        overflow-x: hidden; /* Chặn tràn ngang */
    }

    .header {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        background: rgba(0, 0, 0, 0.3);
        color: white;
        padding: 15px;
        text-align: center;
        font-size: 24px;
        z-index: 10;
    }

    .category-container {
        width: 100%;
        max-width: 100vw;
        margin: 0 auto;
        padding: 0;
        overflow-x: hidden;
    }

        .category-container::-webkit-scrollbar {
            width: 8px;
        }

        .category-container::-webkit-scrollbar-thumb {
            background: rgba(255, 255, 255, 0.3);
            border-radius: 4px;
        }

        .category-container:hover::-webkit-scrollbar-thumb {
            background: rgba(255, 255, 255, 0.6);
        }

    .category-item {
        width: 100%;
        height: 100vh;
        position: relative;
        scroll-snap-align: start;
    }

    .category-media {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    /* 🔹 Định dạng phần tên danh mục */
    .category-info {
        position: absolute;
        top: 50%;
        right: 5%;
        transform: translateY(-50%);
        background: rgba(0, 0, 0, 0.5); /* Nền tối nhẹ để làm nổi bật */
        padding: 15px 25px;
        border-radius: 8px;
    }

        /* 🔹 Kiểu chữ */
        .category-info h2 {
            color: white;
            font-size: 28px;
            font-weight: bold;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
            margin: 0;
        }
</style>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        let container = document.querySelector(".category-container");
        let items = document.querySelectorAll(".category-item");
        let currentIndex = 0;

        function scrollToItem(index) {
            if (index < 0 || index >= items.length) return;
            items[index].scrollIntoView({ behavior: "smooth", block: "start" });
            currentIndex = index;
        }

        // Cuộn xuống khi dùng phím mũi tên
        document.addEventListener("keydown", function (event) {
            if (event.key === "ArrowDown") {
                scrollToItem(currentIndex + 1);
            } else if (event.key === "ArrowUp") {
                scrollToItem(currentIndex - 1);
            }
        });

        // Cuộn bằng chuột (mượt hơn)
        let isScrolling;
        container.addEventListener("wheel", function (event) {
            clearTimeout(isScrolling);
            isScrolling = setTimeout(function () {
                if (event.deltaY > 0) {
                    scrollToItem(currentIndex + 1);
                } else {
                    scrollToItem(currentIndex - 1);
                }
            }, 100);
        });
    });
</script>

