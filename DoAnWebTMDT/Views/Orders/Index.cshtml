@model IEnumerable<DoAnWebTMDT.Data.Order>

@{
    ViewData["Title"] = "Danh Sách Đơn Hàng";
}

<h2 class="text-xl font-bold mb-4">🛍️ Danh Sách Đơn Hàng</h2>

@if (!Model.Any())
{
    <div class="alert alert-warning text-center">Bạn chưa có đơn hàng nào! 🛒</div>
}
else
{
    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Mã Đơn Hàng</th>
                <th>Ngày Đặt</th>
                <th>Trạng Thái</th>
                <th>Tổng Tiền</th>
                <th>Chi Tiết</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>#@order.OrderId</td>
                    <td>@order.CreatedAt</td>
                    <td>@order.OrderStatus</td>
                    <td>@order.TotalAmount.ToString("N0") đ</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@order.OrderId" class="btn btn-sm btn-info">Xem</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
